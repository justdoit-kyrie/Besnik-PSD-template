section.hero
  img.hero-image(srcset="./images/hero.jpg 2x", alt="hero pic")
  .container
    .hero-main
      +globalContent({heading: "Hungry?", title: "Wait a minute for delicious.", desc:"Best cooks and best delivery guys all at your service. Hot tasty food will reach you in 20mins."})
      form.hero-form(action="")
        i.hero-form-input-icon.fas.fa-bullseye
        input(type="text" placeholder="Enter your delivery location").hero-form-input
        button(type="submit").btn.btn--green.global-btn.hero-form-submit
          span Discover 
          span.global-btn-icon
            i.fas.fa-chevron-right 
      .hero-link  
        span Already member of our communty?
        a(href="#")  Sign in